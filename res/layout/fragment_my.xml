<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:background="@drawable/background_action"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="23.5" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
		<ImageView
            android:id="@+id/message"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
             android:src="@drawable/my_image_setting"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />
    </LinearLayout>
    
    
     <LinearLayout
        android:id="@+id/userinfo"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#ffffff" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6.5" >

            <com.peixuze.ui.CircularImage
                android:id="@+id/userhead"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background_head" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="22" 
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >
				<TextView
                    android:id="@+id/username"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:text=""
                    android:textSize="16dp"
                    android:textColor="#2B2B2B" />
				<TextView
                    android:id="@+id/userphone"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:text="点击登陆"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B" />
				<TextView
                    android:id="@+id/user_dish_work"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical|left"
                    android:text=""
                    android:textSize="12dp"
                    android:textColor="#2B2B2B" />
                
                
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/icon_arrow_black_right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />
    </LinearLayout>
    
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EFEDEA" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff" />
     
     
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#ffffff" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/upload_dishs"
            android:layout_height="fill_parent"
            android:layout_weight="14.5"
            android:background="@drawable/button_orange_side" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon_dishs" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="上传菜谱" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

        <LinearLayout
            android:id="@+id/upload_works"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="14.5"
            android:background="@drawable/button_orange_side" >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/icon_works" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="上传作品" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />
    </LinearLayout>
    
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EFEDEA" />
     
     
     
     
     
     
     
     
     
     
     
     
     
     
     
     
     
     
    
    
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:id="@+id/foot"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

        

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="29.5"
            android:gravity="center_vertical"
            android:text="我的足迹" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_arrow_black_right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />
    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/collection"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

       

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="29.5"
            android:gravity="center_vertical"
            android:text="收藏的菜谱" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_arrow_black_right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />
    
    
    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/shoplist"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

       

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="29.5"
            android:gravity="center_vertical"
            android:text="采购清单" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_arrow_black_right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />
    <LinearLayout
        android:background="#ffffff"
        android:visibility="visible"
        android:id="@+id/shakedish"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

        

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="29.5"
            android:gravity="center_vertical"
            android:text="摇一摇" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_arrow_black_right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />
    <LinearLayout
        android:background="#ffffff"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

        

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="29.5"
            android:gravity="center_vertical"
            android:text="收藏的作品" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_arrow_black_right" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />
    </LinearLayout>
    <TextView
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="11"></LinearLayout>

</LinearLayout>
