<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="52" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <ImageView
            android:id="@+id/tabline"
            android:layout_width="100dp"
            android:layout_height="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainbottom"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#C5BCAB" >

        <LinearLayout
            android:id="@+id/index"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/image_index"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/index_check" />

            <TextView
                android:id="@+id/text_index"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="首页"
                android:textColor="@color/orange" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/circle"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/image_circle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/circle_uncheck" />

            <TextView
                android:id="@+id/text_circle"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="圈圈"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stroll"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/image_stroll"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/stroll_uncheck" />

            <TextView
                android:id="@+id/text_stroll"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="逛逛"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fenlei"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/image_fenlei"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/fenlei_uncheck" />

            <TextView
                android:id="@+id/text_fenlei"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="分类"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/image_my"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/my_uncheck" />

            <TextView
                android:id="@+id/text_my"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="我的"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
