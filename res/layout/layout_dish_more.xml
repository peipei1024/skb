<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/cancel1"
        android:alpha="0.7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="51"
        android:background="#F7F7F8"
        android:orientation="vertical" />
    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#EFF1F3"
        android:orientation="vertical" >
        
        <LinearLayout 
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout 
                android:id="@+id/qq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <ImageView 
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_qq"/>
                <TextView android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:textColor="#515151"
                    android:text="QQ"/>
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/weichat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <ImageView 
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_wechat"/>
                <TextView android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="微信"/>
            </LinearLayout>
            
              <LinearLayout 
                 android:id="@+id/weichatfavorite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <ImageView 
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_wechatfavorite"/>
                <TextView android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="微信收藏"/>
            </LinearLayout>
            
               <LinearLayout 
                   android:id="@+id/sinaweibo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <ImageView 
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_sinaweibo"/>
                <TextView android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="新浪"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout 
                android:id="@+id/qzone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <ImageView 
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_qzone"/>
                <TextView android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="QQ空间"/>
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">
               
            </LinearLayout>
            
              <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                
            </LinearLayout>
            
               <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#414953"
            android:gravity="center"
            android:text="取消" />
           
	</LinearLayout>
</LinearLayout>
