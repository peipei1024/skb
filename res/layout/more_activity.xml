<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:background="@drawable/background_action"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/imageview_arrow_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/dishname"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="25.5"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/more"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:text=""
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="#F9FAFC"
        android:orientation="horizontal" >
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_marginLeft="10dp"
		    android:layout_width="0dp"
		    android:layout_weight="5"
		    android:layout_height="fill_parent">
		    <com.peixuze.ui.CircularImage
		        android:id="@+id/head"
		        android:background="@drawable/head"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:layout_gravity="center_vertical"/>
		</LinearLayout>
       

        <LinearLayout 
		    android:layout_width="0dp"
		    android:layout_weight="21"
		    android:layout_height="fill_parent"
		    android:orientation="horizontal">
            <TextView 
                android:id="@+id/name"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="可乐"/>
        </LinearLayout>

        
    </LinearLayout>

    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EDE3D7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#F9FAFC"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:src="@drawable/to_my_suggestion" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center|left"
            android:text="意见反馈" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#F9FAFC"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:src="@drawable/custom_service_phone" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center|left"
            android:text="客服电话" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#F9FAFC"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:src="@drawable/check_updates" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center|left"
            android:text="检查更新" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#F9FAFC"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:src="@drawable/about_my" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center|left"
            android:text="关于" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="6" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#EDE3D7" />
	<LinearLayout 
	    android:background="#EDE3D7"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="4">
	    <Button 
	        android:visibility="visible"
	        android:id="@+id/logout"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:text="退出登录"
	        android:textColor="@color/white"
	        android:background="#F50821"
	    android:layout_width="fill_parent"
	    android:layout_height="45dp"/>
	</LinearLayout>
	
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="17.5"
        android:background="#EDE3D7" />

</LinearLayout>