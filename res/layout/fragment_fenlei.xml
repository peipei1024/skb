<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:background="@drawable/background_action"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="23.5" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:text="分类"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/vadduser"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/vmore"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="48" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="11" />

        <LinearLayout
            android:id="@+id/shuan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="160"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/imageView_acid"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="66"
                android:background="#05A440"
                android:src="@drawable/lemon" />

            <TextView
                android:id="@+id/button_acid"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="28"
                android:background="#05A440"
                android:gravity="center"
                android:paddingRight="30dp"
                android:text="酸                                                    Acid"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <LinearLayout
            android:id="@+id/tian"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="160"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/imageView_sweet"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="66"
                android:background="#E46010"
                android:src="@drawable/strawbarry" />

            <TextView
                android:id="@+id/button_sweet"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="28"
                android:background="#E46010"
                android:gravity="center"
                android:paddingRight="30dp"
                android:text="甜                                                      Sweet"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <LinearLayout
            android:id="@+id/la"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="160"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/imageView_spicy"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="66"
                android:background="#D4433F"
                android:src="@drawable/pepper" />

            <TextView
                android:id="@+id/button_spicy"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="28"
                android:background="#D4433F"
                android:gravity="center"
                android:paddingRight="30dp"
                android:text="辣                                                          Spicy"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <LinearLayout
            android:id="@+id/xian"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="160"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/imageView_salt"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="66"
                android:background="#EBC438"
                android:src="@drawable/salt" />

            <TextView
                android:id="@+id/button_salty"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="28"
                android:background="#EBC438"
                android:gravity="center"
                android:paddingRight="30dp"
                android:text="咸                                                           Salt"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7" />

        <LinearLayout
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="160"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/imageView_more"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="66"
                android:background="#82C703"
                android:src="@drawable/more" />

            <TextView
                android:id="@+id/button_more"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="28"
                android:background="#82C703"
                android:gravity="center"
                android:paddingRight="30dp"
                android:text="更多                                                           More"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3" />
        </LinearLayout>

        
    </LinearLayout>

</LinearLayout>